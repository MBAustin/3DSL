import maya.cmds as cmds
cmds.file(f=True, new=True)
cmds.polySphere(name='s1')
cmds.shadingNode('blinn', name='White', asShader=True)
cmds.setAttr('White.color', 0.0, 0.0, 0.0)
cmds.select('s1')
cmds.hyperShade(assign='White')
cmds.polySphere(name='s2')
cmds.select('s2')
cmds.hyperShade(assign='White')
cmds.polyCube(name='Cube1')
cmds.shadingNode('blinn', name='Black', asShader=True)
cmds.setAttr('Black.color', 1.0, 1.0, 1.0)
cmds.select('Cube1')
cmds.hyperShade(assign='Black')
cmds.move(-1.0, 1.0, 0.0, 's1')
cmds.move(1.0, 1.0, 0.0, 's2')
cmds.move(0.0, -1.0, 0.0, 'Cube1')
